<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyGarden" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/purple_700</item>

        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>

        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Color accent. -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorBackground</item>

        <!--Shape для TextInputLayout -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyGarden.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.MyGarden.MediumComponent
        </item>

        <!-- Checkbox style-->
        <item name="checkboxStyle">@style/Widget.MyGarden.CheckBox</item>

        <!-- TextInput style-->
        <item name="textInputStyle">@style/Widget.MyGarden.TextInputLayout.OutlineBox.Default</item>
    </style>


    <style name="Theme.MyGarden.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyGarden.Switch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/colorAccentText</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/color_grey</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <style name="Theme.MyGarden.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyGarden.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Item.text" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Item.text.strong">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Text.body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Text.strong" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Text.header" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.hint" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Theme.MyGarden.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">2dp</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Theme.MyGarden.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="buttonTint">@color/colorSecondary</item>
    </style>

    <style name="ShapeAppearance.MyGarden.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.MyGarden.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.MyGarden.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/colorAccentText</item>
        <item name="android:textColor">@color/colorAccentText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="Widget.MyGarden.TextInputLayout.Colored" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorBackgroundEditText</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.MyGarden.TextInputLayout.Default" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/transparent</item>
    </style>

    <style name="Widget.MyGarden.TextInputLayout.OutlineBox.Default" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

</resources>