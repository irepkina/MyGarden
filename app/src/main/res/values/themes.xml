<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyGarden" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Color accent. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentText">@color/colorAccentText</item>

        <item name="colorWorkCard">@color/colorWorkCard</item>
        <item name="colorWorkCardDisabled">@color/colorWorkCardDisabled</item>
        <item name="colorLoader">@color/colorLoader</item>
        <item name="colorCalendarCard">@color/colorCalendarCard</item>
        <item name="colorCardDefault">@color/colorCardDefault</item>

        <!--<item name="android:windowBackground">@color/colorBackground</item>-->

        <!--Shape для TextInputLayout -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyGarden.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.MyGarden.MediumComponent
        </item>

        <!-- Checkbox style-->
        <item name="checkboxStyle">@style/Widget.MyGarden.CheckBox</item>

        <!-- TextInput style-->
        <item name="textInputStyle">@style/Widget.MyGarden.TextInputLayout.OutlineBox.Default</item>
    </style>


    <style name="Theme.MyGarden.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyGarden.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Theme.MyGarden.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyGarden.CardView">
        <item name="cardBackgroundColor">?attr/colorCardDefault</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">2dp</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ShapeAppearance.MyGarden.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.MyGarden.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Widget.MyGarden.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">?attr/colorAccent</item>
        <item name="android:textColor">?attr/colorAccentText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="Widget.MyGarden.TextInputLayout.Colored" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorBackgroundEditText</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.MyGarden.TextInputLayout.Default" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/transparent</item>
    </style>

    <style name="Widget.MyGarden.TextInputLayout.OutlineBox.Default" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

</resources>